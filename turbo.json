{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "test:types": {
      "dependsOn": ["^test:types"]
    },
    "docs:links": {
      "cache": false
    }
  }
}
