{
  "name": "chatjs-monorepo",
  "private": true,
  "packageManager": "bun@1.3.1",
  "license": "Apache-2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:chat": "turbo run dev --filter=@chatjs/chat",
    "dev:docs": "turbo run dev --filter=@chatjs/docs",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test --filter=@chatjs/chat",
    "test:types": "turbo run test:types --filter=@chatjs/chat",
    "docs:links": "turbo run docs:links --filter=@chatjs/docs",
    "template:sync": "bun scripts/sync-template.ts",
    "template:check": "bun scripts/sync-template.ts --check",
    "chat-js": "bun --filter @chat-js/cli start",
    "chatjs": "bun run chat-js"
  },
  "overrides": {
    "@lobehub/ui": "~2.24.3"
  },
  "devDependencies": {
    "turbo": "^2.5.8"
  }
}
