# [required] Generate: https://generate-secret.vercel.app/32 or `openssl rand -base64 32`
AUTH_SECRET=


# [required] Postgres URL — https://vercel.com/docs/storage/vercel-postgres/quickstart
DATABASE_URL=

# [required for non-Vercel] Vercel AI Gateway — https://vercel.com/ai-gateway
AI_GATEWAY_API_KEY=

# [required] Vercel Blob token — https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN=

# --- URL & Domain Overrides ---
# Precedence: APP_BASE_URL_OVERRIDE > APP_BASE_URL > Vercel envs > localhost fallback
APP_BASE_URL_OVERRIDE=
# Optional apex domain (no protocol) for shared cookie derivation, e.g. masonjames.com
APEX_DOMAIN=
# Optional subdomain label, e.g. chat — used when deriving hostnames
APP_SUBDOMAIN=
# Shared cookie domain override (include leading dot for subdomains), e.g. .masonjames.com
AUTH_COOKIE_DOMAIN_OVERRIDE=
# Public-facing base URL for client bundles (used by tRPC React hooks)
NEXT_PUBLIC_APP_BASE_URL=

# Legacy (deprecated) fallbacks — retained for backward compatibility
APP_BASE_URL=
AUTH_COOKIE_DOMAIN=
AUTH_TRUSTED_ORIGINS=

# [required for non-Vercel] - System Environment variables ---
# https://vercel.com/docs/environment-variables/system-environment-variables
VERCEL_URL=
VERCEL_PROJECT_PRODUCTION_URL=

# --- Auth (pick ≥1) ---
# Google — https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# GitHub — https://github.com/settings/developers
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# [optional] Email Provider for magic links — https://resend.com/api-keys
# Or use SMTP: SMTP_HOST, SMTP_PORT, SMTP_USER, SMTP_PASSWORD, SMTP_FROM
RESEND_API_KEY=
RESEND_FROM_EMAIL=


# --- Observability (Langfuse) ---
# Create project → Settings → API keys — https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
# Optional
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# [optional] Generate: https://generate-secret.vercel.app/32 or `openssl rand -base64 32`
CRON_SECRET=

# --- Features ---
# [optional] E2B Code Interpreter - Create/push sandbox template; copy template ID — https://e2b.dev/docs
E2B_API_KEY=
SANDBOX_TEMPLATE_ID=
# [optional] Redis — https://vercel.com/docs/redis
REDIS_URL=
# [optional] OpenAI — https://platform.openai.com/api-keys
OPENAI_API_KEY=
# [optional] Tavily — https://app.tavily.com/
TAVILY_API_KEY=
# [optional] Exa — https://dashboard.exa.ai/
EXA_API_KEY=
# [optional] Firecrawl — https://www.firecrawl.dev/
FIRECRAWL_API_KEY=

# --- Entitlements & Subscriptions ---
# Ghost Admin API — https://ghost.org/docs/admin-api/
GHOST_ADMIN_URL=
GHOST_ADMIN_API_KEY=
GHOST_WEBHOOK_SECRET=
GHOST_PORTAL_URL=https://masonjames.com/#/portal
# Ghost Members SSO bridge (optional) — enables sharing sessions from the apex domain
GHOST_MEMBER_COOKIE_NAME=
GHOST_MEMBER_SSO_SECRET=

# Stripe — https://stripe.com/docs/api
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
